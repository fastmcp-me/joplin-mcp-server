{
  "_comment": "Example Claude Desktop configuration using command-line arguments with environment variable expansion",
  "mcpServers": {
    "joplin": {
      "command": "npx",
      "args": [
        "joplin-mcp-server",
        "--port",
        "${JOPLIN_PORT}",
        "--token",
        "${JOPLIN_TOKEN}"
      ],
      "env": {
        "JOPLIN_PORT": "41184",
        "JOPLIN_TOKEN": "your_actual_token_here"
      }
    }
  }
}